<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="searchTag"
            type="kr.foorun.data.tag.SearchTag" />
        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.map.SearchTagViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tagItem_CL"
        app:setTagDrawable="@{searchTag.picked}"
        android:onClick="@{() -> viewModel.tagClicked(searchTag)}"
        android:layout_marginEnd="11dp"
        android:layout_width="wrap_content"
        android:layout_height="38dp">

        <kr.foorun.uni_eat.base.view.base.BaseTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{searchTag.tagName}"
            app:setTagTextColor="@{searchTag.picked}"
            android:textSize="13sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>