<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="kr.foorun.model.user.User" />
        <variable
            name="isOthers"
            type="Boolean" />
        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.mypage.MyPageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseBarConstraintView
            android:id="@+id/bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:frontVisible="false"
            app:rearVisible="true"
            app:rearImage="@drawable/my_page_dot"
            app:titleText="@{isOthers == null || isOthers == false ? @string/my_page : @string/empty}"
            app:setViewModel="@{viewModel}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_constraint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/bar">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/my_page_base_profile" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
                    android:id="@+id/empty_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/my_page_base_empty_profile"
                    android:visibility="visible" />
            </FrameLayout>
            <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="@{user.name.isEmpty == true ? user.name : @string/my_profile}"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/frameLayout"
                app:layout_constraintTop_toTopOf="@+id/frameLayout" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/school_certification_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:onClick="@{() -> viewModel.clickedSchoolCertification()}"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/frameLayout"
                app:layout_constraintTop_toBottomOf="@+id/name_text">

                <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.emailClicked()}"
                    android:layout_marginStart="13dp"
                    android:text="@string/school_certification"
                    android:textSize="15sp" />

                <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/arrow_right" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/introduce_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/margin_21"
            android:paddingVertical="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_constraint">

            <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
                android:id="@+id/introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/my_page_introduce_text_17"
                android:textColor="@color/search_tag_pick"
                app:visible="@{user.introduce.isEmpty() == true || user == null ? false : true}"
                android:text="@{user.introduce}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tag_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/introduce"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/introduce_constraint"
            app:layout_constraintBottom_toBottomOf="parent">

            <kr.foorun.uni_eat.base.view.base.base_layout.BaseTab
                android:id="@+id/page_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>