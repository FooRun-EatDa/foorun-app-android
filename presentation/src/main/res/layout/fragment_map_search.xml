<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.map.search.fragment.MapSearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.map.search.fragment.MapSearchFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainSearch_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <kr.foorun.uni_eat.base.view.base.BaseImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="73dp"
                android:layout_marginEnd="346.38dp"
                android:layout_marginBottom="11.76dp"
                android:src="@drawable/arrow_left"
                android:onClick="@{() -> viewModel.backClicked()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SearchView
                android:layout_width="310dp"
                android:layout_height="38dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="62dp"
                android:layout_marginEnd="21dp"
                app:searchWatcher="@{viewModel.searchWordWatcher}"
                app:searchIcon="@drawable/main_search"
                android:background="@drawable/searchbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainSearch_constraint">
            
            <kr.foorun.uni_eat.base.view.base.BaseTextView
                android:id="@+id/recent_words_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_words"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent_words_recycler"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="17dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="18.25dp"
                android:layout_marginBottom="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recent_words_text"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:visible="@{viewModel.isNonSearch()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainSearch_constraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <kr.foorun.uni_eat.base.view.base.BaseImageView
                android:id="@+id/non_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="207dp"
                android:layout_marginBottom="391dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:foregroundGravity="center"
                android:src="@drawable/non_search_image"/>

            <kr.foorun.uni_eat.base.view.base.BaseImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.7dp"
                app:layout_constraintTop_toBottomOf="@+id/non_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:foregroundGravity="center"
                android:src="@drawable/non_search_result"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>