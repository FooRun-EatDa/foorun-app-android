<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.event.EventViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/event_SRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <kr.foorun.uni_eat.base.view.base.base_layout.BaseBarConstraintView
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                app:layout_constraintTop_toTopOf="parent"
                app:titleText="@string/event" />

            <View
                android:id="@+id/event_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.6"
                android:onClick="@{()->viewModel.clickOutsideBottomSheet()}" />

            <FrameLayout
                android:id="@+id/event_FL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="2dp" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/event_NSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/event_clickedEvent_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    tools:context=".feature.event.EventFragment">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/event_CL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
                            android:id="@+id/typo_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="33dp"
                            android:layout_marginTop="56dp"
                            android:layout_marginEnd="192dp"
                            android:letterSpacing="-0.05"
                            android:text="@string/event_typo"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/event_filter_LL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="153dp"
                            android:layout_marginEnd="33dp"
                            android:onClick="@{()->viewModel.showSortMethod()}"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
                                android:id="@+id/event_filter_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/event_sort_newest"
                                android:textColor="@color/small_text"
                                android:textSize="13sp" />

                            <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3.72dp"
                                android:src="@drawable/arrow_down" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/event_RV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="40dp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>