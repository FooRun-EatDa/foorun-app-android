<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/invisible"
    app:elevation="0dp"
    app:menu="@menu/menu_my_page"
    app:subtitleTextColor="@color/LargeTextColor"
    app:titleTextColor="@color/LargeTextColor">

    <kr.foorun.uni_eat.base.view.base.BaseTextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:textColor="@color/LargeTextColor"
        android:textSize="23sp"
        android:text="@string/my_page"
        tools:text="Toolbar" />
</androidx.appcompat.widget.Toolbar>