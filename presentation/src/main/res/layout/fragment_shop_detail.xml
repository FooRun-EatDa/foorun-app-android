<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.map.shop_detail.fragment.ShopDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_constraint"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/detail_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="535dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <kr.foorun.uni_eat.base.view.base.recycler.indicator.CircleIndicator
                        android:id="@+id/viewpager_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/detail_recycler" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <kr.foorun.uni_eat.base.view.base.BaseTextView
                        android:id="@+id/shop_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="카인드"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="19.5dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@id/shop_info_constraint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/shop_info_constraint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="21.5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/shop_name_text">

                        <kr.foorun.uni_eat.base.view.base.BaseTextView
                            android:id="@+id/shop_nick_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정건"
                            android:textSize="15sp"
                            android:textColor="@color/small_text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/vertical_line_view"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <View
                            android:id="@+id/vertical_line_view"
                            android:layout_width="1dp"
                            android:layout_height="18dp"
                            android:background="@drawable/vertical_line"
                            android:layout_marginStart="7.5dp"
                            android:layout_marginEnd="7.5dp"
                            app:layout_constraintStart_toEndOf="@id/shop_nick_text"
                            app:layout_constraintEnd_toStartOf="@id/shop_kind_text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <kr.foorun.uni_eat.base.view.base.BaseTextView
                            android:id="@+id/shop_kind_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="레스토랑"
                            android:textColor="@color/small_text"
                            app:layout_constraintStart_toEndOf="@id/vertical_line_view"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/horizon_line_view"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@drawable/horizen_line"
                        android:layout_marginTop="9dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/shop_explain_text"
                        app:layout_constraintTop_toBottomOf="@id/shop_info_constraint"/>

                    <kr.foorun.uni_eat.base.view.base.BaseTextView
                        android:id="@+id/shop_explain_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="분위기 좋은 파스타 맛집"
                        android:layout_marginStart="20.5dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="11dp"
                        app:layout_constraintTop_toBottomOf="@id/horizon_line_view"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <kr.foorun.uni_eat.base.view.base.BaseInformation
                    android:layout_marginTop="29dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:information="@string/phone_number"
                    app:value="010 1234 1234" />

                <kr.foorun.uni_eat.base.view.base.BaseInformation
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:information="@string/location"
                    app:value="영일중" />

                <kr.foorun.uni_eat.base.view.base.BaseInformation
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:information="@string/price"
                    app:value="20,000원 대" />

                <kr.foorun.uni_eat.base.view.base.BaseInformation
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:information="@string/address"
                    app:value="경기 수원시 영통구" />

                <kr.foorun.uni_eat.base.view.base.BaseInformation
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.onClickMenu()}"
                    app:information="@string/menu"
                    app:show_arrow="true" />
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menu_recycler"
                    app:visible="@{viewModel.isShowMenu()}"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_tag_recycler"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            
                <kr.foorun.uni_eat.base.view.base.BaseTextView
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notice_add"
                    android:textSize="15sp"
                    android:textColor="@color/small_text"/>

                <kr.foorun.uni_eat.base.view.base.BaseTextView
                    android:layout_marginTop="41dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/article"
                    android:textSize="21sp"
                    android:textColor="@color/large_text"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/article_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:spanCount="2"
                    tools:listitem="@layout/item_article_thumbnail"
                    android:layout_marginTop="13dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <kr.foorun.uni_eat.base.view.base.BaseImageView
            android:id="@+id/white_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.backClicked()}"
            android:src="@drawable/arrow_left_white"
            android:layout_marginTop="73dp"
            android:layout_marginStart="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_constraint"
            android:layout_width="0dp"
            android:layout_height="84dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <kr.foorun.uni_eat.base.view.base.BaseImageView
                android:id="@+id/bookmark_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bookmark"
                android:layout_marginTop="16.18dp"
                android:layout_marginEnd="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <kr.foorun.uni_eat.base.view.base.BaseImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                android:layout_marginTop="13.99dp"
                android:layout_marginEnd="31dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/bookmark_image"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>