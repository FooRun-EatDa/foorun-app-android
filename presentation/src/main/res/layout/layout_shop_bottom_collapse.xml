<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.map.bottom_sheet.fragment.shop.ShopCollapseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
                android:id="@+id/arrow_up_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.arrowClicked()}"
                android:src="@drawable/arrow_up"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="19dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/shopInformation"/>

            <kr.foorun.uni_eat.base.view.base.base_layout.BaseShopConstraintView
                android:id="@+id/shopInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shopName="카인드"
                app:shopNick="정건"
                app:shopKind="레스토랑"
                app:shopContent="분위기 좋은 어쩌구저쩌구"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arrow_up_image"/>

            <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/shop_images_recycler"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="17dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintBottom_toTopOf="@id/bottom_option"
                app:layout_constraintTop_toBottomOf="@id/shopInformation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <kr.foorun.uni_eat.base.view.base.base_layout.BaseBottomOptionView
                android:id="@+id/bottom_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
