<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.mypage.email.MyPageEmailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="kr.foorun.uni_eat.feature.mypage.email.MyPageEmailFragment">

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseBarConstraintView
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:frontVisible="true"
            setViewModel="@{viewModel}"
            app:layout_constraintTop_toTopOf="parent"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
            android:id="@+id/explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_verify_text"
            android:textSize="@dimen/text_size_large_25"
            android:textColor="@color/text_navy"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_21"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bar"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseEditTextLayout
            android:id="@+id/email_edit"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:setUnderLine="@{viewModel.underLine}"
            android:hint="unieat2022"
            app:editUnderLineVisible="true"
            android:textSize="@dimen/article_text_small_19"
            app:textWatcher="@{viewModel.emailTextWatcher}"
            android:layout_marginTop="63dp"
            android:layout_marginHorizontal="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/explain"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=" @ khu.ac.kr"
            android:layout_marginStart="4dp"
            android:layout_marginTop="67dp"
            app:layout_constraintStart_toEndOf="@id/email_edit"
            app:layout_constraintTop_toBottomOf="@id/explain"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
            android:id="@+id/email_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_explain_text_13"
            android:layout_marginTop="@dimen/margin_11"
            android:layout_marginHorizontal="26dp"
            app:layout_constraintTop_toBottomOf="@id/email_edit"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{() -> viewModel.doneClicked()}"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/navy"
            app:layout_constraintBottom_toBottomOf="parent">

            <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>