<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="name"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kr.foorun.uni_eat.feature.mypage.email.done.EmailDoneFragment">

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email_done"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
            android:id="@+id/sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done_email"
            android:textSize="@dimen/my_page_introduce_text_17"
            android:textColor="@color/small_text"
            android:layout_marginTop="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image" />
        
        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{name.isEmpty() ? @string/c_text : name + @string/c_text2}"
            android:textSize="@dimen/large_text2"
            android:textColor="@color/text_navy"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/sub_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>