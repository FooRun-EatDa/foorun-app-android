<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <kr.foorun.uni_eat.base.view.base.BaseTextView
            android:id="@+id/shop_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large_23"
            android:layout_marginTop="36dp"
            android:layout_marginStart="19.5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/shop_info_constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shop_info_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="21.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shop_name_text">

            <kr.foorun.uni_eat.base.view.base.BaseTextView
                android:id="@+id/shop_nick_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/small_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vertical_line_view"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/vertical_line_view"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:background="@drawable/vertical_line"
                android:layout_marginStart="7.5dp"
                android:layout_marginEnd="7.5dp"
                app:layout_constraintStart_toEndOf="@id/shop_nick_text"
                app:layout_constraintEnd_toStartOf="@id/shop_kind_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <kr.foorun.uni_eat.base.view.base.BaseTextView
                android:id="@+id/shop_kind_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/small_text"
                app:layout_constraintStart_toEndOf="@id/vertical_line_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/horizon_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/horizon_line"
            android:layout_marginTop="9dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/content"
            app:layout_constraintTop_toBottomOf="@id/shop_info_constraint"/>

        <kr.foorun.uni_eat.base.view.base.BaseTextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/horizon_line_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>