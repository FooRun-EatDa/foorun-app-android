<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="article"
            type="kr.foorun.model.article.Article" />
        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.article.detail.ArticleDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kr.foorun.uni_eat.feature.article.detail.ArticleDetailFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_option"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <kr.foorun.uni_eat.base.view.base.BaseArticleImage
                    android:id="@+id/shop_image"
                    android:layout_width="match_parent"
                    android:layout_height="535dp"
                    app:setShopImage="@{article.shopImages[0]}"
                    app:setShopArea="@{article.area}"
                    app:setShopName="@{article.shopName}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <kr.foorun.uni_eat.base.view.base.BaseArticleContentConstraintView
                    android:layout_width="match_parent"
                    android:layout_height="538dp"
                    app:root="@color/invisible"
                    app:child="@drawable/article_content_page"
                    android:layout_marginTop="-33dp"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shop_image">

                    <kr.foorun.uni_eat.base.view.base.BaseImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/icon_size_mini_52"
                        android:layout_height="@dimen/icon_size_mini_52"
                        android:layout_marginStart="@dimen/article_detail_icon_start_21"
                        android:layout_marginTop="@dimen/article_detail_icon_top_25"
                        android:src="@drawable/icon_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <kr.foorun.uni_eat.base.view.base.BaseTextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:setText="@{article.user}"
                        android:textSize="15sp"
                        android:textColor="@color/large_text"
                        android:layout_marginStart="@dimen/margin_13"
                        android:layout_marginTop="40dp"
                        app:layout_constraintStart_toEndOf="@id/icon"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <kr.foorun.uni_eat.base.view.base.BaseImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"
                        android:layout_marginTop="34dp"
                        app:layout_constraintStart_toEndOf="@id/user"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <kr.foorun.uni_eat.base.view.base.BaseShopConstraintView
                        android:id="@+id/information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/large_text"
                        android:textSize="@dimen/text_size_large_23"
                        app:setName="@{article.shopName}"
                        app:setKind="@{article.kind}"
                        app:setNick="@{article.nick}"
                        app:setContent="@{article.content}"
                        app:layout_constraintTop_toBottomOf="@+id/icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <kr.foorun.uni_eat.base.view.base.BaseTextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2022.11.11"
                        android:textColor="@color/small_text"
                        android:layout_marginStart="@dimen/margin_21"
                        android:layout_marginTop="@dimen/margin_21"
                        android:layout_marginBottom="17dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/search_tag_recycler"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/search_tag_recycler"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </kr.foorun.uni_eat.base.view.base.BaseArticleContentConstraintView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <kr.foorun.uni_eat.base.view.base.BaseImageView
            android:id="@+id/white_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.backClicked()}"
            android:src="@drawable/arrow_left_white"
            android:layout_marginTop="@dimen/back_button_margin_top_73"
            android:layout_marginStart="@dimen/back_button_margin_start_21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <kr.foorun.uni_eat.base.view.base.BaseBottomOptionView
            android:id="@+id/bottom_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>