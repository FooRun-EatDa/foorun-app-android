<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.text.InputType"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseEditTextView
            android:id="@+id/base_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
            android:id="@+id/rear_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
            android:id="@+id/under_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/under_line"
            app:layout_constraintTop_toBottomOf="@id/base_edittext"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
