<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="eventCoupon"
            type="kr.foorun.model.event.EventCoupon" />

        <variable
            name="viewModel"
            type="kr.foorun.uni_eat.feature.home.adapter.HomeEventAdapterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
            android:id="@+id/home_item_event_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_item_event_height"
            app:glide="@{eventCoupon.image}"
            app:layout_constraintTop_toTopOf="parent"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
            android:id="@+id/home_item_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large_25"
            android:text="@{eventCoupon.name}"
            android:textColor="@color/large_text"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_item_event_image"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
            android:layout_width="9dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/white_semicircle_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_item_event_image"
            app:layout_constraintBottom_toBottomOf="@id/home_item_event_image"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
            android:layout_width="9dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/white_semicircle_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_item_event_image"
            app:layout_constraintBottom_toBottomOf="@id/home_item_event_image"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/horizon_line"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_item_event_title"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
            android:id="@+id/home_item_event_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large_15"
            android:text="@{eventCoupon.description}"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"/>

        <kr.foorun.uni_eat.base.view.base.base_layout.BaseTextView
            android:id="@+id/home_item_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large_15"
            android:layout_marginTop="16dp"
            android:text="@{`이벤트 기간: `+eventCoupon.startDate+` ~ `+eventCoupon.endDate}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_item_event_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>