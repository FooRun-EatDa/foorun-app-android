<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/splashFragment"
    android:id="@+id/map_nav">

    <fragment
        android:id="@+id/splashFragment"
        android:name="kr.foorun.uni_eat.feature.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument
            android:name="@string/hide_bottom"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="kr.foorun.uni_eat.feature.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <argument
            android:name="@string/hide_bottom"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="kr.foorun.uni_eat.feature.map.MapFragment"
        android:label="MapFragment" >
        <action
            android:id="@+id/action_mapFragment_to_shopDetailFragment"
            app:destination="@id/shopDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/shopDetailFragment"
        android:name="kr.foorun.uni_eat.feature.map.shop_detail.fragment.ShopDetailFragment"
        android:label="ShopDetailFragment" />

    <include app:graph="@navigation/home_nav" />
    <include app:graph="@navigation/article_nav" />
    <include app:graph="@navigation/event_nav" />
    <include app:graph="@navigation/my_nav" />

</navigation>