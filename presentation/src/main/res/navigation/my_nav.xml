<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/my_page">
    <fragment
        android:id="@+id/my_page"
        android:name="kr.foorun.uni_eat.feature.mypage.MyPageFragment"
        android:label="MyFragment"
        tools:layout="@layout/fragment_my_page" >

        <action
            android:id="@+id/action_my_page_to_myPageMoreFragment"
            app:destination="@id/myPageMoreFragment" />
    </fragment>

    <fragment
        android:id="@+id/myPageMoreFragment"
        tools:layout="@layout/fragment_my_page_more"
        android:name="kr.foorun.uni_eat.feature.mypage.more.MyPageMoreFragment"
        android:label="MyPageMoreFragment" >

        <action
            android:id="@+id/action_myPageMoreFragment_to_myPageAccountFragment"
            app:destination="@id/myPageAccountFragment" />

        <argument
            android:name="@string/hide_bottom"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

    <fragment
        tools:layout="@layout/fragment_my_page_account"
        android:id="@+id/myPageAccountFragment"
        android:name="kr.foorun.uni_eat.feature.mypage.account.MyPageAccountFragment"
        android:label="MyPageAccountFragment" >

        <argument
            android:name="@string/hide_bottom"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

</navigation>